<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="teamlab" type="ASC.TeamLabSvc.Configuration.TeamLabSvcConfigurationSection, TeamLabSvc"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <teamlab>
    <services>
      <add type="ASC.TeamLabSvc.Tests.TestService1" disable="false"/>
      <add type="ASC.Notify.NotifyServiceLauncher, ASC.Notify"/>
    </services>
  </teamlab>

  <log4net>
    <logger name="ASC">
      <appender-ref ref="Console" />
      <appender-ref ref="File" />
      <level value="TRACE" />
    </logger>

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <appender name="File" type="log4net.Appender.FileAppender">
      <file value="TeamLabSvc.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level [%thread] %logger - %message%newline" />
      </layout>
    </appender>
  </log4net>

</configuration>